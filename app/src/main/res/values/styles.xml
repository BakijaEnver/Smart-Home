<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorFullTransparent</item>
        <item name="textColorError">@color/colorFullTransparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryWhite</item>
        <item name="android:windowBackground">@drawable/splash_back</item>
        <item name="colorControlNormal">@color/colorPrimaryWhite</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryWhite</item>
        <item name="android:windowBackground">@drawable/login_back</item>
        <item name="colorControlNormal">@color/colorPrimaryWhite</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Device" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="AppTheme.Register" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryWhite</item>
        <item name="android:windowBackground">@drawable/register_back</item>
        <item name="colorControlNormal">@color/colorPrimaryWhite</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="textColorError">@color/colorFullTransparent</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">30sp</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryWhite</item>
        <item name="colorControlActivated">@color/colorPrimaryWhite</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorFullTransparent</item>
        <item name="android:textColorPrimary">@color/colorFullTransparent</item>
        <item name="android:background">@color/colorFullTransparent</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1 </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="animationName" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/animation_on</item>
        <item name="android:windowExitAnimation">@anim/animation_off</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:windowBackground">@color/colorFullTransparent</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_on</item>
        <item name="android:windowExitAnimation">@anim/animation_off</item>
    </style>

    <style name="NewDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
