<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/activity_register"
    tools:context="com.example.enver.flinkhomev1.Register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:src="@drawable/flink_logo"
            android:layout_width="wrap_content"
            android:paddingBottom="5sp"
            android:paddingTop="25sp"
            android:layout_marginBottom="45sp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.09"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:layout_height="wrap_content" />

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"
            android:hint="@string/first_name"
            android:singleLine="true"
            android:drawableRight="@drawable/user_icon"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            android:inputType="textPersonName"
            android:paddingBottom="5sp"
            />
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:singleLine="true"
            android:hint="@string/last_name"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            android:drawableRight="@drawable/user_icon"
            android:paddingBottom="5dp"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"/>
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_email"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:singleLine="true"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            android:hint="@string/email_address"
            android:drawableRight="@drawable/email_icon"
            android:paddingBottom="5dp"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"/>
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_username"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            android:singleLine="true"
            android:hint="@string/username"
            android:drawableRight="@drawable/user_icon"
            android:paddingBottom="5dp"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"/>
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            android:singleLine="true"
            android:hint="@string/password"
            android:drawableRight="@drawable/password_icon"
            android:paddingBottom="5dp"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"/>
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_confirm_password"
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#FFFFFF"
            android:ems="10"
            android:textCursorDrawable="@color/colorPrimaryWhite"
            android:singleLine="true"
            android:hint="@string/re_type_password"
            android:drawableRight="@drawable/password_icon"
            android:paddingBottom="5dp"
            android:textSize="17sp"
            android:layout_marginBottom="25sp"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/edit_text_selector"
            app:layout_widthPercent="80%"
            android:layout_gravity="center_horizontal"/>
            </android.support.percent.PercentFrameLayout>

        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_height="40sp">
        <Button
            android:id="@+id/btn_reg"
            android:layout_width="wrap_content"
            android:layout_height="38sp"
            android:layout_gravity="center_horizontal"
            app:layout_widthPercent="80%"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="#920a10"
            android:fontFamily="sans-serif"
            android:background="@drawable/login_button_selector"
            android:text="@string/register_button"
            android:onClick ="onReg"
          />
        </android.support.percent.PercentFrameLayout>

        <Button
            android:id="@+id/btn_hasAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_button_effect"
            android:textColor="@color/colorPrimaryWhite"
            android:fontFamily="sanse-serif"
            android:text="@string/have_an_account"
            android:textAllCaps="true"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:onClick="OpenLogin"
            android:layout_marginTop="35sp"
            android:paddingTop="5sp"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:layout_marginBottom="20sp"
            android:paddingBottom="5sp" />

    </LinearLayout>
</ScrollView>
