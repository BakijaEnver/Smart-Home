<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryWhite"
    android:orientation="vertical"
    android:id="@+id/activity_calendar"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:paddingTop="10sp"
        android:background="@drawable/settings_line_code"
        android:paddingBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/NameOfDevice"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="12sp"
            android:text="Name of device:"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/room_menu_line_back"
            android:paddingRight="20sp"
            android:gravity="bottom|left"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/NameOfDevice1"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textSize="14sp"
        android:text="Flink air"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/room_menu_line_back"
        android:paddingRight="20sp"
        android:gravity="bottom|left"
        android:textAlignment="gravity"
        android:layout_gravity="start"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"/>
         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">
        <TextView
        android:id="@+id/Command"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textSize="12sp"
        android:text="Commands"
        android:paddingLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/room_menu_line_back"
        android:paddingRight="20sp"
        android:gravity="bottom|left"
        android:textAlignment="gravity"
        android:layout_gravity="start"
        android:textColor="@color/colorBlack" />
        <TextView
            android:id="@+id/Command1"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="14sp"
            android:text="Flink air"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/room_menu_line_back"
            android:paddingRight="20sp"
            android:gravity="bottom|left"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textAllCaps="true"
            android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/Date"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="12sp"
            android:text="Date"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/room_menu_line_back"
            android:paddingRight="20sp"
            android:gravity="bottom|left"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textColor="@color/colorBlack"
          />
        <TextView
            android:id="@+id/Date1"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:textSize="14sp"
            android:text="Flink air"
            android:paddingLeft="10dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/room_menu_line_back"
            android:paddingRight="20sp"
            android:gravity="bottom|left"
            android:textAlignment="gravity"
            android:layout_gravity="start"
            android:textAllCaps="true"
            android:layout_marginBottom="5sp"
            android:textColor="@color/colorBlack"/>

            </LinearLayout>
    </LinearLayout>
        </android.support.percent.PercentFrameLayout>
        <android.support.percent.PercentFrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:background="@color/colorFullTransparent"
            android:layout_gravity="bottom|end"
            android:layout_height="wrap_content">
        <LinearLayout
            app:layout_widthPercent="100%"
            android:gravity="end"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/Change"
            android:background="@color/colorFullTransparent"
            android:layout_width="wrap_content"
          android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:layout_height="wrap_content" />
        </LinearLayout>
        </android.support.percent.PercentFrameLayout>

    </LinearLayout>
</RelativeLayout>