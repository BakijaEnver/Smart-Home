<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorSidebarButton"
    android:layout_height="match_parent"
    android:id="@+id/activity_my_account"
    tools:context="com.example.enver.flinkhomev1.MyAccount">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/app_bar_back"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageButton
                android:id="@+id/imgLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorFullTransparent"
                android:paddingRight="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:src="@drawable/app_bar_back_button"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                />

            <TextView
                android:id="@+id/titlemain"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:text="@string/my_account"
                android:textSize="18sp"
                android:layout_marginRight="15sp"
                android:textColor="@color/colorPrimaryWhite"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical|center"
                android:textAlignment="gravity"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imgRight"
                android:layout_alignEnd="@+id/imgRight" />

            <TextView
                android:id="@+id/titleright"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        android:layout_marginTop="56sp"
        android:background="@color/colorSidebarButton"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryWhite"
            android:paddingTop="25sp"
            >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_account_details"
                android:textAlignment="center"
                android:layout_marginBottom="30sp"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:layout_marginLeft="20sp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/edit_text_selector_blue"
                android:layout_marginBottom="15sp">
                <EditText
                    android:id="@+id/editFirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:ems="10"
                    android:singleLine="true"
                    android:paddingTop="0sp"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:paddingBottom="0sp"
                    android:textSize="16sp"
                    android:textColorHint="@color/textColor"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/colorFullTransparent"
                    android:inputType="textPersonName"
                    />
                <Button
                    android:id="@+id/changeName"
                    android:layout_width="25sp"
                    android:layout_height="37sp"
                    android:text="OK"
                    android:textSize="14sp"
                    android:background="@drawable/my_account_ok_button"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold|normal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignParentRight="true"
                    android:onClick="changeName"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:layout_marginLeft="20sp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="40sp"
                android:layout_marginRight="20sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_selector_blue"
                >
                <EditText
                    android:id="@+id/editLastname"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:ems="10"
                    android:singleLine="true"
                    android:paddingTop="0sp"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:paddingBottom="0sp"
                    android:textSize="16sp"
                    android:textColorHint="@color/textColor"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@color/colorFullTransparent"
                    android:inputType="textPersonName"
                    />
                <Button
                    android:id="@+id/changeSurname"
                    android:layout_width="25sp"
                    android:layout_height="37sp"
                    android:text="OK"
                    android:textSize="14sp"
                    android:background="@drawable/my_account_ok_button"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold|normal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_alignParentRight="true"
                    android:onClick="changeSurname"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/colorSidebarButton"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textAlignment="center"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="20sp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_password"
                    android:layout_marginLeft="20sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    />
                <EditText
                    android:id="@+id/oldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:ems="10"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:paddingTop="0sp"
                    android:singleLine="true"
                    android:paddingBottom="0sp"
                    android:textSize="16sp"
                    android:textColorHint="@color/textColor"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/edit_text_selector_blue"
                    android:inputType="textPassword"
                    android:layout_marginBottom="15sp"
                    android:hint="* * * * * * * *"
                    />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_marginLeft="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_password"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    />
                <EditText
                    android:id="@+id/newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:ems="10"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:paddingTop="0sp"
                    android:singleLine="true"
                    android:paddingBottom="0sp"
                    android:textSize="16sp"
                    android:textColorHint="@color/textColor"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/edit_text_selector_blue"
                    android:inputType="textPassword"
                    android:layout_marginBottom="15sp"
                    android:hint="* * * * * * * *"
                    />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="@string/re_type_new_password"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    />
                <EditText
                    android:id="@+id/newPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_gravity="start"
                    android:ems="10"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:paddingTop="0sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:paddingBottom="0sp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/textColor"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/edit_text_selector_blue"
                    android:inputType="textPassword"
                    android:hint="* * * * * * * *"
                    />
                <Button
                    android:id="@+id/chngPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:text="@string/change_password"
                    android:textAllCaps="true"
                    android:background="@drawable/all_radius_button_blue"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:paddingLeft="40sp"
                    android:paddingRight="40sp"
                    android:onClick="changePassword"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
