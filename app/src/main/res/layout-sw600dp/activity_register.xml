<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_register"
    android:fitsSystemWindows="true"
    tools:context="com.example.enver.flinkhomev1.Register">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView android:src="@drawable/flink_logo_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:layout_marginBottom="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.09"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.1" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="First Name"
                    android:drawableRight="@drawable/user_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/edit_text"
                    android:inputType="textPersonName"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    />

                <EditText
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="Last Name"
                    android:drawableRight="@drawable/user_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/edit_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

                <EditText
                    android:id="@+id/et_email"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="Email address"
                    android:drawableRight="@drawable/email_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/edit_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

                <EditText
                    android:id="@+id/et_username"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="Username"
                    android:drawableRight="@drawable/user_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

                <EditText
                    android:id="@+id/et_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="Password"
                    android:drawableRight="@drawable/password_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="30sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/edit_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#FFFFFF"
                    android:ems="10"
                    android:hint="Re-type password"
                    android:drawableRight="@drawable/password_icon"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="50sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sans-serif-light"
                    android:background="@drawable/edit_text"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"/>

                <Button
                    android:id="@+id/btn_reg"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="100dp"
                    android:textSize="14sp"
                    android:textColor="#920a10"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/button_back"
                    android:text="Register"
                    android:onClick ="onReg"
                  />

                <Button
                    android:id="@+id/btn_hasAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorFullTransparent"
                    android:textColor="@color/colorPrimaryWhite"
                    android:fontFamily="sanse-serif"
                    android:onClick="OpenLogin"
                    android:text="Already have an account?"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"
                    android:layout_marginTop="65sp"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.997" />
        </LinearLayout>
</ScrollView>
